@model ConnexionVM

<div class="container mt-2 connexion">
    <div class="row justify-content-center">
        <div class="col-5">
            <h3>Connexion <i class="bi bi-plug-fill"></i></h3>
            <form asp-action="Connexion">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Pseudo" class="col control-label"></label>
                    <div class="col">
                        <input asp-for="Pseudo" class="form-control" />
                        <span asp-validation-for="Pseudo" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="MotDePasse" class="col control-label"></label>
                    <div class="col">
                        <input asp-for="MotDePasse" class="form-control" />
                        <span asp-validation-for="MotDePasse" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-light">Se connecter</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>