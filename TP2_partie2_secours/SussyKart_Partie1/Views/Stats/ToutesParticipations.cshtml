@model FiltreParticipationVM

<!-- Formulaire pour filtrer les résultats -->
<div class="container">
    <h2>Toutes les participations</h2>
    <div class="row">
        <div class="col">
            <form asp-action="ToutesParticipationsFiltre">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <!-- Chercher les participations d'un joueur par son pseudo -->
                    <div class="form-group col-6">
                        <label asp-for="Pseudo" class="control-label"></label>
                        <div>
                            <input asp-for="Pseudo" class="form-control" />
                            <span asp-validation-for="Pseudo" class="text-danger"></span>
                        </div>
                    </div>
                    <!-- Chercher les participations pour une course en particulier -->
                    <div class="form-group col-6">
                        <label asp-for="Course" class="control-label"></label>
                        <div>
                                <select asp-for="Course" class="form-control">
                                @foreach (var item in Model.Courses)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </select>
                                <span asp-validation-for="Course" class="text-danger"></span>
                            </div>
                    </div>
                </div>
                <div class="row">
                    <!-- Ordonner les résultats par Date ou Chrono -->
                    <div class="form-group col-6">
                        <label asp-for="Ordre" class="control-label"></label>
                        <div>
                            <select asp-for="Ordre" class="form-control">
                            @foreach (var item in Model.Ordres)
                            {
                                <option value="@item.Value">@item.Text</option>
                            }
                            </select>
                            <span asp-validation-for="Ordre" class="text-danger"></span>
                        </div>
                    </div>
                    <!-- Ordonner les résultats de manière croissante ou décroissante -->
                    <div class="form-group col-6">
                        <label asp-for="TypeOrdre" class="control-label"></label>
                        <div>
                            <select asp-for="TypeOrdre" class="form-control">
                            @foreach (var item in Model.TypesOrdre)
                            {
                                <option value="@item.Value">@item.Text</option>
                            }
                            </select>
                            <span asp-validation-for="TypeOrdre" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row align-items-end">
                    <div class="form-group col-3">
                        <label asp-for="Page" class="control-label"></label>
                        <div>
                            <input asp-for="Page" class="form-control" />
                            <span asp-validation-for="Page" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group col-auto">
                        <div class="col-md-offset-2">
                            <button type="submit" class="btn btn-light">Filtrer</button>
                        </div>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>


<div class="container">
    <div class="row justify-content-center">
    <div class="col">
        <!-- Affichage des données de la vue -->
        <table class="table">
            <thead>
                <tr>
                    <th>
                        <!-- Pseudo du joueur -->
                        Pseudo
                    </th>
                    <th>
                        <!-- Nom de la course -->
                        Course
                    </th>
                    <th>
                        <!-- Nombre de joueurs -->
                        Nombre de joueurs
                    </th>
                    <th>
                        <!-- Position -->
                        Position
                    </th>
                    <th>
                        <!-- Chrono -->
                        Chrono
                    </th>
                    <th>
                        <!-- Date de la participation -->
                        Date
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Participations)
                {
                <tr>
                    <td>
                        <!-- Pseudo du joueur -->
                        @item.Pseudo
                    </td>
                    <td>
                        <!-- Nom de la course -->
                        @item.Nom
                    </td>
                    <td>
                        <!-- Nombre de joueurs -->
                        @item.NbJoueurs
                    </td>
                    <td>
                        <!-- Position -->
                        @item.Position
                    </td>
                    <td>
                        <!-- Chrono -->
                        @item.Chrono
                    </td>
                    <td>
                        <!-- Date de la participation -->
                        @item.DateParticipation
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

</div>
